<% provide(:title, @user.name) %>
<% if !notice.nil? %>
	<p id="notice"><%= notice %></p>
<% end %>
<div class = "profileheader roundedtop">
	<h1>Profile</h1>
</div>
<div class = "profile roundedbottom">
	<p>
		Name: <%= @user.name %>
		</br>Username: <%= @user.username %>
		<% if current_user?(@user) || admin_user?(@user) == "admin" %>
			</br>Email: <%= @user.email %>
			</p>
			<h4><i>Don't worry! Your e-mail is not displayed to other users.</i></h4>
			<h3><%= link_to "Edit account or Change password", edit_user_path(@user) %> | 
			<%= link_to "Delete my account", @user, method: :delete,
	                              data: { confirm: "Are you sure? This action
	                              	cannot be undone." } %></h3>
		<% else %>
	</p>
	<% end %>
</div>
<div class="narr-search-bar roundedtop"><h1><%= @user.name %>'s Narratives</h1></div>
<div class = "small-holder roundedbottom">
<%= render :partial => @user.narratives %>
</div>
