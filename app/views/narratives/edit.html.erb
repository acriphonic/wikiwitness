<h1>Editing Narrative</h1>

<%= form_for([:event, @narrative]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label "Link Image (Optional)" %><br />
    <%= f.text_field :image_link %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <p><%= f.submit %></p>
<% end %>